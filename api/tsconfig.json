{
  "compilerOptions": {
    "module": "commonjs",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "target": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "./build",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": "./src",
    "paths": {
      "@modules/*": [
      "modules/*"
      ],
      "@shared/*": [
      "shared/*"
      ],
      "@errors/*": [
      "errors/*"
      ],
      "@routes/*": [
        "routes/*"
      ],
      "@middlewares/*": [
      "middlewares/*"
      ]
    },
  },
  "lib": ["es6"]
}
